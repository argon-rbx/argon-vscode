{
  "name": "argon",
  "displayName": "Lemonade",
  "description": "Roblox AI code generation tool",
  "publisher": "Lemonade Labs (credits to Dervex)",
  "version": "0.0.1",
  "icon": "assets/logo.png",
  "homepage": "https://argon.wiki",
  "repository": {
    "type": "git",
    "url": "https://github.com/argon-rbx/argon-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/argon-rbx/argon-vscode/issues"
  },
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "Roblox",
    "Studio",
    "Lua",
    "Luau",
    "Sync"
  ],
  "activationEvents": [
    "onLanguage:lua",
    "onLanguage:luau",
    "workspaceContains:*.project.json"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "argon.openMenu",
        "title": "Open Menu",
        "category": "Lemonade"
      }
    ],
    "keybindings": [
      {
        "command": "argon.play",
        "when": "editorLangId == lua || editorLangId == luau",
        "key": "f5"
      },
      {
        "command": "argon.run",
        "when": "editorLangId == lua || editorLangId == luau",
        "key": "f8"
      },
      {
        "command": "argon.start",
        "when": "editorLangId == lua || editorLangId == luau",
        "key": "f7"
      },
      {
        "command": "argon.stop",
        "when": "editorLangId == lua || editorLangId == luau",
        "key": "shift+f5"
      },
      {
        "command": "argon.exec",
        "when": "editorLangId == lua || editorLangId == luau",
        "key": "f6"
      }
    ],
    "configuration": {
      "title": "Lemonade",
      "properties": {
        "argon.autoUpdate": {
          "type": "boolean",
          "default": true,
          "description": "Whether Argon should update the CLI automatically",
          "order": 0
        },
        "argon.autoRun": {
          "type": "boolean",
          "default": false,
          "description": "Whether Argon should serve the last used project when launching VS Code",
          "order": 1
        },
        "argon.autoLaunchStudio": {
          "type": "boolean",
          "default": false,
          "description": "Whether Roblox Studio should be launched automatically when running a project",
          "order": 2
        },
        "argon.focusStudio": {
          "type": "boolean",
          "default": true,
          "description": "Whether Roblox Studio window should get focused when executing code",
          "order": 3
        },
        "argon.notificationLevel": {
          "type": "string",
          "default": "Info",
          "description": "Level of notifications to show in the bottom right corner",
          "enum": [
            "Info",
            "Warning",
            "Error",
            "Off"
          ],
          "order": 4
        },
        "argon.defaultHost": {
          "type": "string",
          "default": "localhost",
          "description": "Host name of the serve address",
          "pattern": "[hostname]",
          "patternErrorMessage": "This symbol is not allowed",
          "order": 5
        },
        "argon.defaultPort": {
          "type": "number",
          "default": 8000,
          "description": "Port number of the serve address",
          "minimum": 0,
          "maximum": 65535,
          "order": 6
        },
        "argon.globalConfig": {
          "type": "object",
          "default": {},
          "description": "Contents of the CLI global configuration file",
          "additionalProperties": {
            "type": "string"
          },
          "order": 7
        },
        "argon.verbose": {
          "type": "boolean",
          "default": false,
          "description": "Log verbose tracing of the CLI to the output panel",
          "order": 8
        }
      }
    },
    "jsonValidation": [
      {
        "fileMatch": "*.project.json",
        "url": "./assets/schemas/project.json"
      },
      {
        "fileMatch": "*.data.json",
        "url": "./assets/schemas/data.json"
      },
      {
        "fileMatch": "*.meta.json",
        "url": "./assets/schemas/data.json"
      },
      {
        "fileMatch": "*.model.json",
        "url": "./assets/schemas/model.json"
      }
    ],
    "icons": {
      "argon-logo": {
        "description": "Argon logo",
        "default": {
          "fontPath": "assets/argon-font.woff",
          "fontCharacter": "\\41"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint": "eslint src --max-warnings 0 --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "16.x",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^8.57.1",
    "glob": "^10.4.5",
    "mocha": "^10.8.2",
    "prettier": "^3.4.2",
    "ts-loader": "^9.5.2",
    "typescript": "^5.7.3",
    "webpack": "^5.97.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@terascope/fetch-github-release": "^0.8.10"
  }
}
